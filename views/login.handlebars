<div class="container" id="container-login">
  <div class="text-center login-content">
    <h1 class="text-center mt-3">Login</h1>
    <div class="text-center icon-container my-3">
      <a href="/auth/facebook"><i class="fab fa-facebook-square fa-3x" style="color: #3c1361"></i></a>
      {{!-- <a><i class="fab fa-google-plus-square fa-3x" style="color: #3c1361"></i></a> --}}
    </div>
    <span>or use your account</span>
    {{> message}}
    <form action="/users/login" method="POST">
      <div class="form-group mt-3">
        <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email">
      </div>
      <div class="form-group mt-3">
        <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password">
      </div>
      <button type="submit" class="btn btn-light btn-block btn-login">Login</button>
    </form>
    <p class="lead mt-4">
      No Account? <a href="/users/register">Register</a>
    </p>
  </div>
</div>