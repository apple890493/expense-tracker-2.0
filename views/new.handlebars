<div class="container">
  <div class="row">
    <div class="col-12 col-lg-10 col-xl-8 mx-auto">
      <form action="/expense" method="POST">
        <div class="card text-center">
          <div class="card-header">
            New Record
          </div>
          <div class="card-body">
            {{!-- <div class="form-group row"> --}}
              <div class="col-md-12">
                <input type="date" name="date" class="form-control" id="inputDate3" value="{{today}}" required>
              </div>
              {{!--
            </div> --}}

            {{!-- <div class="form-group row"> --}}
              <div class="col-md-12">
                <input type="text" name="name" class="form-control" id="inputName3" placeholder="Name" required>
              </div>
              {{!--
            </div> --}}

            {{!-- <div class="form-group row"> --}}
              <div class="col-md-12">
                <input type="number" min="1" max="999999999" step="1" name="amount" class="form-control"
                  id="inputAmount3" placeholder="Amount" required>
              </div>
              {{!--
            </div> --}}

            {{!-- <div class="form-group row"> --}}
              <div class="col-md-12">
                <input type="text" name="chart" class="form-control" id="inputChart3" placeholder="Chart">
              </div>
              {{!--
            </div> --}}
            {{!--
            <div class="form-group row"> --}}
              <div class="col-md-12">
                <select class="custom-select custom-select-sm mb-3" id="inputCatergory" name="category" required>
                  <option value="" disabled selected>Category type</option>
                  {{#each categories}}
                  <option value="{{this.title}}">{{this.title}}</option>
                  {{/each}}
                </select>
              </div>
              {{!--
            </div> --}}

          </div>
          <div class="card-footer text-muted">
            <button class="btn btn-dark btn-create" type="submit">Create</button>
            <a href="/">
              <button type="button" class="btn btn-dark btn-back">Back</button>
            </a>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>